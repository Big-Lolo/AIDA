<?xml version="1.0" encoding="utf-8"?>

<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Home"
    android:id="@+id/phatherContainerBs">

    <TextView
        android:id="@+id/Bienvenidas"
        android:layout_width="292dp"
        android:layout_height="88dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="49dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Nueva Alarma"
        android:textColor="@color/white"
        android:textSize="37dp"
        app:layout_constraintBottom_toTopOf="@+id/views"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/views"
        android:layout_width="321dp"
        android:layout_height="142dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="136dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003" />


    <TimePicker
        android:id="@+id/datePicker1"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="@+id/views"
        app:layout_constraintEnd_toEndOf="@+id/views"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/views"
        app:layout_constraintTop_toTopOf="@+id/views"
        app:layout_constraintVertical_bias="0.616"
        android:textSize="32sp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_weight="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/phatherContainerBs"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:orientation="vertical">



            <!-- Aquí puedes agregar los elementos que quieres que ocupen el resto de la pantalla -->

            <RelativeLayout
                android:id="@+id/bottom_views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/homeslip">

                <TextView
                    android:id="@+id/myTextVieweeeess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebas_neue"
                    android:text="Alarma"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"
                    android:textStyle="normal"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/calendarpk"
                    android:layout_width="47dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="228dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="65dp"
                    android:layout_toEndOf="@+id/myTextVieweeeess"
                    android:background="@android:drawable/ic_menu_my_calendar"
                    android:backgroundTint="#000000" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/myTextVieweeeess"
                    android:layout_marginTop="50dp"
                    android:id="@+id/scrollAlarms"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/receive_round_box"
                    android:backgroundTint="#88A39A9A"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >

                        <!-- Agrega aquí los contenedores cuadrados -->
                        <TextView
                            android:id="@+id/lunes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:clickable="true" />
                        <TextView
                            android:id="@+id/martes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:clickable="true" />
                        <TextView
                            android:id="@+id/miercoles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:clickable="true" />
                        <TextView
                            android:id="@+id/jueves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="J"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:clickable="true" />
                        <TextView
                            android:id="@+id/viernes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="V"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:clickable="true" />
                        <TextView
                            android:id="@+id/sabado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:clickable="true" />
                        <TextView
                            android:id="@+id/domingo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="D"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:clickable="true" />

                    </LinearLayout>
                </HorizontalScrollView>


                <TextView
                    android:id="@+id/nameAlarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebas_neue"
                    android:text="Nombre"
                    android:textSize="20dp"
                    android:layout_below="@+id/scrollAlarms"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"/>


                <EditText
                    android:id="@+id/eventss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre de la alarma"
                    android:textColorHint="@color/graybot"
                    android:textColor="@color/black"
                    android:layout_below="@+id/nameAlarm"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    />


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/vibrateSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vibración de alarma"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/eventss"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/vibrateSwitch"
                    android:id="@+id/selectToneButton"
                    android:background="@color/graybot"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp">

                    <!-- Botón para seleccionar tono -->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar tono"
                        android:id="@+id/selectToneButtons" />

                    <!-- Switch para controlar la activacion del sonido -->
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/soundSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/myTextVieweeeess"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:text="Hoy" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/selectToneButton"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="60dp">

                    <Button
                        android:id="@+id/btnCancelar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancelar"
                        android:layout_marginRight="90dp"
                        android:backgroundTint="#CA303B"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:id="@+id/btnGuardar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/chat_color_receiver"
                        android:text="Guardar"
                        android:layout_toEndOf="@id/btnCancelar" />

                </RelativeLayout>


            </RelativeLayout >

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>